// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "sqlite"
  url       = "file:./database/database.db"
  // provider = "postgresql"
  // url      = env("DATABASE_URL")
}

model User {
  id          Int    @id @default(autoincrement())
  email       String @unique
  username    String @unique
  password    String
}

model Character {
  id          Int   @id @default(autoincrement())
  name        String
  description String
  image       String
}

model Location{
  id          Int   @id @default(autoincrement())
  name        String
  description String
  image       String
}

model Npc{
  id          Int   @id @default(autoincrement())
  name        String
  description String
  image       String
}

model Item{
  id          Int   @id @default(autoincrement())
  name        String
  description String
  image       String
}

model Recap{
  id          Int   @id @default(autoincrement())
  title       String?   @unique
  text        String
  // createAt    DateTime @default(now())
}

model Note{
  id          Int   @id @default(autoincrement())
  name        String   @unique
  description String
  image       String?
}